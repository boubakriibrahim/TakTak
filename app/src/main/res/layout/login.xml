<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".loginActivity"
    android:background="@drawable/background">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bien"
        android:orientation="horizontal">



        <TextView
            android:id="@+id/wel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/kavoon"
            android:paddingLeft="20dp"
            android:paddingTop="40dp"
            android:text="Welcome,"
            android:textColor="@color/are"
            android:textSize="45dp">

        </TextView>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/logo" />

    </LinearLayout>



    <LinearLayout

        android:id="@+id/welcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="150dp"
        android:gravity="center"
        android:layout_below="@id/bien"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">


        <EditText
            android:id="@+id/editTextTextEmailAddress"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/button1"
            android:drawableLeft="@drawable/mail"
            android:drawablePadding="10dp"
            android:fontFamily="@font/amaranth"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:textColor="@color/are"
            android:textColorHint="@color/are"
            android:textSize="25dp" />

        <EditText
            android:id="@+id/editTextTextPassword"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:layout_gravity="center"
            android:ems="10"
            android:hint="Password"
            android:drawableLeft="@drawable/password"
            android:drawablePadding="10dp"
            android:background="@drawable/button1"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:textSize="25dp"
            android:fontFamily="@font/amaranth"
            android:inputType="textPassword"
            android:textColor="@color/are"
            android:textColorHint="@color/are" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/forgetRegister"
            android:orientation="horizontal"
            android:layout_margin="15dp"
            android:gravity="center">

            <TextView
                android:id="@+id/forget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/kavoon"
                android:text="Forget your password?"
                android:textAllCaps="true"
                android:textColor="@color/purple_200"
                android:textSize="13dp"
                android:gravity="left"
                android:onClick="forgetPassword"
                android:clickable="true">


            </TextView>

            <TextView
                android:id="@+id/registerbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:fontFamily="@font/kavoon"
                android:onClick="registerAccount"
                android:gravity="right"
                android:paddingLeft="5dp"
                android:text="Don't have an account?"
                android:textAllCaps="true"
                android:textColor="@color/purple_200"
                android:textSize="13dp">


            </TextView>


        </LinearLayout>


        <TextView
            android:id="@+id/btnn"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:background="@drawable/button"
            android:fontFamily="@font/sriracha"
            android:gravity="center"
            android:text="SIGN IN"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:onClick="logIn"
            android:clickable="true">

        </TextView>






    </LinearLayout>


    <LinearLayout
        android:id="@+id/contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/welcome"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="50dp">


        <View
            android:layout_width="90dp"
            android:layout_height="1dp"
            android:background="@color/white"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp">

        </View>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact Us"
            android:textStyle="bold"
            android:textSize="17dp"
            android:textColor="@color/white">


        </TextView>

        <View
            android:layout_width="90dp"
            android:layout_height="1dp"
            android:background="@color/white"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp">

        </View>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_below="@id/contact"
        android:gravity="center">

        <ImageView
            android:id="@+id/fb"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/fb"
            android:onClick="fbClick"/>

        <ImageView
            android:id="@+id/insta"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:src="@drawable/instagram"
            android:onClick="instaClick"/>

        <ImageView
            android:id="@+id/linkedin"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:src="@drawable/linkedin"
            android:onClick="linkedIn"/>



    </LinearLayout>



    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        />

</RelativeLayout>