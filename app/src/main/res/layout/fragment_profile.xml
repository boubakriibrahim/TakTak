<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".ProfileFragment"
    android:background="@color/black">

    <RelativeLayout
        android:id="@+id/menu"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:padding="20dp"
        android:background="@color/jaune">

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/logo"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/hautNomdapresDataBase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="70sp"
            android:text="HEY YOU!"
            android:textColor="@color/black"
            android:fontFamily="@font/chalkboy"
            android:layout_toRightOf="@id/profile_image"
            android:layout_centerVertical="true"
            android:includeFontPadding="false"
            android:layout_marginLeft="10dp"/>


  </RelativeLayout>


    <RelativeLayout
        android:gravity="center_vertical"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/button1"
        android:id="@+id/LlNom1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/menu">

        <TextView

            android:drawablePadding="10dp"

            android:paddingLeft="10dp"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:id="@+id/TvNom1"
            android:drawableLeft="@drawable/user"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="First Name:" />



        <TextView
            android:id="@+id/TvNomDapresBase1"
            android:layout_toRightOf="@id/TvNom1"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="" />



    </RelativeLayout>

    <RelativeLayout
        android:gravity="center_vertical"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/button1"
        android:id="@+id/LlPrenom1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TvVotreProfil1">

        <TextView

            android:drawablePadding="10dp"

            android:paddingLeft="10dp"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:id="@+id/TvPrenom1"
            android:drawableLeft="@drawable/user"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Second Name:" />



        <TextView
            android:id="@+id/TvPrenomDapresLaBase1"
            android:layout_toRightOf="@id/TvPrenom1"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="" />



    </RelativeLayout>

    <RelativeLayout
        android:gravity="center_vertical"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/button1"
        android:id="@+id/LlAge1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TvVotreProfil1">

        <TextView

            android:drawablePadding="10dp"
            android:paddingLeft="10dp"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:id="@+id/TvAge1"
            android:drawableLeft="@drawable/age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Age:" />



        <TextView
            android:id="@+id/TvAgeDapresLaBase1"
            android:layout_toRightOf="@id/TvAge1"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="" />

    </RelativeLayout>

    <RelativeLayout
        android:gravity="center_vertical"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/button1"
        android:id="@+id/LlAdresse1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TvVotreProfil1">

        <TextView

            android:drawablePadding="10dp"

            android:paddingLeft="10dp"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:id="@+id/TvAdresse1"
            android:drawableLeft="@drawable/mail"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email:" />



        <TextView
            android:id="@+id/TvAdresseDapresLaBase1"
            android:layout_toRightOf="@id/TvAdresse1"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="" />




    </RelativeLayout>
    
    <Button
        android:id="@+id/BtnModifier1"
        android:layout_width="360dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="50dp"
        android:text="Change Credentials"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:background="@drawable/round_bg"
        android:layout_marginTop="30dp">

    </Button>


</LinearLayout>