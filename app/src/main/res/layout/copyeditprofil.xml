<?xml version="1.0" encoding="utf-8"?>
 <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroud1"
    tools:context=".ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/TvVotreProfil2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/kavoon"
        android:paddingLeft="20dp"
        android:paddingTop="40dp"

        android:textColor="@color/black"
        android:textSize="45dp"

        android:text="Your profil," />

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_marginHorizontal="24dp"

        android:layout_marginTop="80dp"

        android:background="@drawable/button1"
        android:id="@+id/LlNom2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TvVotreProfil2">

        <TextView

            android:drawablePadding="10dp"

            android:paddingLeft="10dp"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:id="@+id/TvNom2"
            android:drawableLeft="@drawable/user"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="First Name:" />



        <TextView
            android:id="@+id/TvNomDapresBase2"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="" />








    </LinearLayout>

    <LinearLayout
        android:layout_marginHorizontal="24dp"
        android:gravity="center_vertical"

        android:layout_marginTop="15dp"
        android:background="@drawable/button1"
        android:id="@+id/LlPrenom2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LlNom2">

        <TextView
            android:drawablePadding="10dp"

            android:paddingLeft="10dp"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:drawableLeft="@drawable/user"

            android:id="@+id/TvPrenom2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Second Name:" />



        <TextView
            android:id="@+id/TvPrenomDapresLaBase2"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />



    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="24dp"
        android:gravity="center_vertical"
        android:background="@drawable/button1"
        android:id="@+id/LlAge2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LlPrenom2">



        <TextView
            android:drawableLeft="@drawable/age"
            android:drawablePadding="10dp"

            android:paddingLeft="10dp"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:id="@+id/TvAge2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="age" />


        <TextView
            android:id="@+id/TvAgeDapresLaBase2"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="" />



    </LinearLayout>

    <LinearLayout
        android:layout_marginHorizontal="24dp"
        android:gravity="center_vertical"
        android:layout_marginTop="15dp"
        android:id="@+id/LlAdresse2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LlAge2">
        <TextView
            android:drawablePadding="10dp"

            android:paddingLeft="10dp"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:drawableLeft="@drawable/mail"
            android:id="@+id/TvAdresse2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email:" />
        <TextView
            android:id="@+id/TvAdresseDapresLaBase2"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="" />


    </LinearLayout>

    <Button
        android:id="@+id/BtnModifier2"
        android:layout_marginTop="40dp"
        android:background="@drawable/button"
        android:backgroundTint="@color/yellow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:textColor="@color/black"
        android:text="Change credentials"
        android:textSize="18sp"
        android:layout_below="@+id/LlAdresse2"
        style="@style/Widget.MaterialComponents.Button.Icon"
        />




</RelativeLayout>

