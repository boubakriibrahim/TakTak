<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signup"
    android:background="@color/black">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:id="@+id/bien"
        android:orientation="vertical">

        <View
            android:id="@+id/topView"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:background="@color/yellow" />

        <View
            android:id="@+id/view5"
            android:layout_width="wrap_content"
            android:layout_below="@id/topView"
            android:layout_height="100dp"
            android:background="@drawable/wave" />
    </LinearLayout>

    <TextView
        android:id="@+id/topText"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="56dp"
        android:text="Don't Have \nan Account?"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="250dp"
        app:srcCompat="@drawable/ic_person" />

    <LinearLayout
        android:id="@+id/fullname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_below="@id/bien">

        <EditText
            android:id="@+id/editTextTextPersonName"
            android:layout_width="170dp"
            android:layout_height="45dp"
            android:layout_margin="10dp"
            android:background="@drawable/button1"
            android:drawableLeft="@drawable/user"
            android:drawablePadding="10dp"
            android:hint="First Name"
            android:textSize="15sp"
            android:inputType="textPersonName"
            android:paddingLeft="15dp"
            android:paddingRight="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black" />

        <EditText
            android:id="@+id/editTextTextPersonName2"
            android:layout_height="45dp"
            android:layout_width="170dp"
            android:layout_margin="10dp"
            android:hint="Second Name"
            android:textSize="15sp"
            android:drawableLeft="@drawable/user"
            android:drawablePadding="10dp"
            android:inputType="textPersonName"
            android:background="@drawable/button1"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/adresspass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical"
        android:layout_below="@id/fullname"
        android:gravity="center">

        <EditText
            android:id="@+id/editTextAge"
            android:layout_width="360dp"
            android:layout_height="45dp"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="10dp"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center"
            android:inputType="number"
            android:hint="Age"
            android:drawableLeft="@drawable/age"
            android:drawablePadding="10dp"
            android:background="@drawable/button1"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:paddingLeft="20dp"
            android:paddingRight="10dp" />

        <EditText
            android:id="@+id/editTextTextEmailAddress"
            android:layout_width="360dp"
            android:layout_height="45dp"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center"
            android:hint="Email"
            android:drawableLeft="@drawable/mail"
            android:drawablePadding="10dp"
            android:inputType="textEmailAddress"
            android:background="@drawable/button1"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:paddingLeft="20dp"
            android:paddingRight="10dp" />

        <EditText
            android:id="@+id/editTextTextPassword"
            android:layout_width="360dp"
            android:layout_height="45dp"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:layout_gravity="center"
            android:hint="Password"
            android:drawableLeft="@drawable/password"
            android:drawablePadding="10dp"
            android:inputType="textPassword"
            android:background="@drawable/button1"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"/>



        <TextView
            android:id="@+id/btnn"
            android:layout_width="360dp"
            android:layout_height="45dp"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:background="@drawable/round_bg"
            android:gravity="center"
            android:text="SIGN UP"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:onClick="registerAcc"
            android:clickable="true">

        </TextView>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/log"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/adresspass"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="15dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ALREADY HAVE AN ACCOUNT?"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:fontFamily="@font/kavoon"/>


        <TextView
            android:id="@+id/connection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SIGN IN"
            android:textColor="@color/yellow"
            android:textStyle="bold"
            android:textSize="17sp"
            android:paddingLeft="8dp"
            android:fontFamily="@font/kavoon"
            android:onClick="loginAccount"
            android:clickable="true"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/log"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="20dp">


        <View
            android:layout_width="90dp"
            android:layout_height="1dp"
            android:background="@color/white"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp">

        </View>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact Us"
            android:textStyle="bold"
            android:textSize="17dp"
            android:textColor="@color/white">


        </TextView>

        <View
            android:layout_width="90dp"
            android:layout_height="1dp"
            android:background="@color/white"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp">

        </View>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/contact"
        android:gravity="center">

        <ImageView
            android:id="@+id/fb"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/fb"
            android:onClick="fbClick"/>

        <ImageView
            android:id="@+id/insta"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:src="@drawable/instagram"
            android:onClick="instaClick"/>

        <ImageView
            android:id="@+id/linkedin"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:src="@drawable/linkedin"
            android:onClick="linkedIn"/>



    </LinearLayout>



    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        />

</RelativeLayout>